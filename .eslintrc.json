{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ]
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "env": {
                "jest": true
            },
            "globals": {
                "fetchMock": "readonly"
            }
        }
    ]
}
